<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <Button
        android:id="@+id/element_search_button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="openElementSearch"
        android:text="@string/element_button"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".3"
        app:layout_constraintWidth_percent="0.6" />

    <Button
        android:id="@+id/periodic_table_button"
        style="@style/Widget.AppCompat.Button"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.13"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="openPeriodicTable"
        android:layout_marginTop="115dp"
        android:text="@string/periodic_table_button"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="@+id/element_search_button"
        app:layout_constraintStart_toStartOf="@+id/element_search_button"
        app:layout_constraintTop_toBottomOf="@+id/element_search_button" />
</androidx.constraintlayout.widget.ConstraintLayout>